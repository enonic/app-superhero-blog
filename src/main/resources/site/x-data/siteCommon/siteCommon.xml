<?xml version="1.0" encoding="UTF-8"?>
<x-data>
    <display-name i18n="xData.siteCommon.displayName">Blog config</display-name>
    <form>
        <input type="ImageSelector" name="backgroundImage">
            <label i18n="xData.siteCommon.backgroundImage">Background image</label>
            <occurrences minimum="0" maximum="1"/>
            <config/>
        </input>
        <input type="HtmlArea" name="footerText">
            <label i18n="xData.siteCommon.footerText">Footer text</label>
            <occurrences minimum="0" maximum="1"/>
            <config>
                <exclude>*</exclude>
                <include>Bold Italic Underline | JustifyLeft JustifyCenter JustifyRight JustifyBlock | SpecialChar Anchor Link Unlink</include>
            </config>
        </input>
        <input type="RadioButton" name="commentSort" >
            <label i18n="xData.siteCommon.commentSort">Sort comments</label>
            <occurrences minimum="1" maximum="1"/>
            <default>DESC</default>
            <config>
                <option value="ASC" i18n="xData.siteCommon.commentSort.asc">Oldest first</option>
                <option value="DESC" i18n="xData.siteCommon.commentSort.desc">Newest first</option>
            </config>
        </input>
    </form>
</x-data>
