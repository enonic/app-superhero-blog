<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>RSS page</display-name>
  <content-display-name-script>$('title')</content-display-name-script>
  <super-type>base:structured</super-type>
  <form>
    <field-set name="basic">
      <label>RSS info</label>
      <items>
        <input type="TextLine" name="title">
          <label>Title</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="ComboBox" name="updatePeriod">
          <label>SY Update period</label>
          <occurrences minimum="0" maximum="1"/>
          <config>
            <property name="option.value">hourly</property>
            <property name="option.label">Hourly</property>

            <property name="option.value">daily</property>
            <property name="option.label">Daily</property>

            <property name="option.value">weekly</property>
            <property name="option.label">Weekly</property>

            <property name="option.value">monthly</property>
            <property name="option.label">Monthly</property>

            <property name="option.value">yearly</property>
            <property name="option.label">Yearly</property>
          </config>
        </input>
        <input type="TextLine" name="updateFrequency">
          <label>SY Update frequency</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="ContentSelector" name="postsFolder">
          <label>Category</label>
          <occurrences minimum="0" maximum="0"/>
          <config>
            <relationship-type>system:reference</relationship-type>
            <allow-content-type>base:folder</allow-content-type>
          </config>
        </input>
      </items>
    </field-set>
  </form>
  <x-data mixin="menu-item"/>
</content-type>