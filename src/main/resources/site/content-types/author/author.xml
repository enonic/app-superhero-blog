<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Author</display-name>
  <content-display-name-script>$('name')</content-display-name-script>
  <super-type>base:structured</super-type>
  <description>Create authors to be selected on blog posts</description>
  <form>
    <input type="TextLine" name="name">
      <label>Name</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <max-length>11</max-length>
      </config>
    </input>
    <input type="TextLine" name="email">
      <label>Email</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input type="TextLine" name="website">
      <label>Website</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="HtmlArea" name="bio">
      <label>Bio</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
  </form>
  <config>
    <list-title-expression>${data.name} (${data.email})</list-title-expression>
  </config>
</content-type>
