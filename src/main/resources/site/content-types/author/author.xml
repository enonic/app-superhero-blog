<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name i18n="contentType.author.displayName">Author</display-name>
  <display-name-label i18n="contentType.author.fullName">Full Name</display-name-label>
  <super-type>base:structured</super-type>
  <description i18n="contentType.author.description">Create authors to be selected for blog posts</description>
  <form>
    <input type="TextLine" name="email">
      <label i18n="contentType.author.email">Email</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input type="TextLine" name="website">
      <label i18n="contentType.author.website">Website</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="HtmlArea" name="bio">
      <label i18n="contentType.author.bio">Bio</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
  </form>
</content-type>
