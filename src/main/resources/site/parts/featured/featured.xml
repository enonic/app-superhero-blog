<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part xmlns="urn:enonic:xp:model:1.0">
  <display-name>Featured</display-name>
  <description>Feature a post in large format</description>
  <form>
    <input type="ContentSelector" name="posts">
      <label>Featured posts</label>
      <occurrences minimum="0" maximum="5"/>
      <config>
        <relationship>system:reference</relationship>
        <allowType>post</allowType>
        <allowPath>${site}/*</allowPath>
      </config>
    </input>
  </form>
</part>
