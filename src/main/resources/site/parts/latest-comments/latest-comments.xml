<part>
    <display-name>Latest comments</display-name>
    <description>Lists the latest comments on all the blog's posts</description>
    <form>
        <field-set name="things">
            <label>Latest comments</label>
            <items>
                <input type="TextLine" name="headline">
                    <label>Title</label>
                    <default></default>
                    <help-text>The headline text displayed on this part</help-text>
                </input>
                <input type="Long" name="size">
                    <label>How many comments to show?</label>
                    <default>5</default>
                    <config>
                        <min>1</min>
                        <max>20</max>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</part>
