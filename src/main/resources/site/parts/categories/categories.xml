<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part xmlns="urn:enonic:xp:model:1.0">
  <display-name>Categories</display-name>
  <description>Display link list on all categories used in existing blog posts</description>
  <form>
    <input type="TextLine" name="title">
      <label>Title</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="CheckBox" name="showPostCount">
      <label>Show count</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="CheckBox" name="showHierarchy">
      <label>Show hierarchy</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </form>
</part>
