<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
  <display-name>Meta</display-name>
  <config>
    <field-set name="config">
      <label>Config</label>
      <items>
        <input type="TextLine" name="title">
          <label>Title</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </field-set>
    <field-set name="login">
      <label>Login</label>
      <items>
        <input type="ContentSelector" name="loginPage">
          <label>Login page</label>
          <config>
            <relationship-type>system:reference</relationship-type>
            <allow-content-type>landing-page</allow-content-type>
          </config>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="Checkbox" name="allowLogin">
          <label>Allow login</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </field-set>
    <field-set name="links">
      <label>Links</label>
      <items>
        <item-set name="links">
          <label>Link</label>
          <items>
            <input type="ContentSelector" name="contentLink">
              <label>Content link</label>
              <occurrences minimum="0" maximum="1"/>
            </input>
            <input type="TextLine" name="externalUrl">
              <label>External URL</label>
              <occurrences minimum="0" maximum="1"/>
            </input>
            <input type="TextLine" name="linkText">
              <label>Link text</label>
              <occurrences minimum="0" maximum="1"/>
            </input>
            <input type="TextLine" name="linkTitle">
              <label>Link title</label>
              <occurrences minimum="0" maximum="1"/>
            </input>
          </items>
          <occurrences minimum="0" maximum="0"/>
        </item-set>
      </items>
    </field-set>
  </config>
</part>