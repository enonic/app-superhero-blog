<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
  <display-name>Recent comments</display-name>
  <config>
    <field-set name="config">
      <label>Config</label>
      <items>
        <input type="TextLine" name="title">
          <label>Title</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="TextLine" name="maxComments">
          <label>Number of comments</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </field-set>
  </config>
</part>