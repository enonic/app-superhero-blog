<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part xmlns="urn:enonic:xp:model:1.0">
  <display-name>Monthly archive</display-name>
  <description>Link list for blog posts, grouped by month.</description>
  <form>
    <input type="TextLine" name="title">
      <label>Title</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="Checkbox" name="showPostCount">
      <label>Show count</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </form>
</part>
