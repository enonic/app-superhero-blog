<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part-component>
  <display-name>Monthly archive</display-name>
  <config>
    <input type="TextLine" name="title">
      <label>Title</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="Checkbox" name="showPostCount">
      <label>Show count</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="ContentSelector" name="contentFolder">
      <lable>Folder</lable>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <relationship-type>system:reference</relationship-type>
        <allow-content-type>base:folder</allow-content-type>
      </config>
    </input>
  </config>
</part-component>