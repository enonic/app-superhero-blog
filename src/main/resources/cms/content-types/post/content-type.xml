<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Post</display-name>
  <content-display-name-script>$('title')</content-display-name-script>
  <super-type>base:structured</super-type>
  <is-abstract>false</is-abstract>
  <is-final>true</is-final>
  <allow-child-content>true</allow-child-content>
  <form>
    <field-set name="basic">
      <label>Post</label>
      <items>
        <input type="TextLine" name="title">
          <label>Title</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="TextLine" name="author">
          <label>Author</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="HtmlArea" name="post">
          <label>Post text</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="Tag" name="tag">
          <label>Tags</label>
          <occurrences minimum="0" maximum="0"/>
        </input>
        <input type="Checkbox" name="enableComments">
          <label>Enable comments</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </field-set>
  </form>
</content-type>