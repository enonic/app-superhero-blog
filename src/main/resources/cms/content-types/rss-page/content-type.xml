<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>RSS page</display-name>
  <content-display-name-script>$('title')</content-display-name-script>
  <super-type>base:structured</super-type>
  <form>
    <field-set name="basic">
      <label>Post</label>
      <items>
        <input type="TextLine" name="title">
          <label>Title</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="SingleSelector" name="updatePeriod">
          <label>SY Update period</label>
          <occurrences minimum="0" maximum="1"/>
          <config>
            <options>
              <option>
                <label>Hourly</label>
                <value>hourly</value>
              </option>
              <option>
                <label>Daily</label>
                <value>daily</value>
              </option>
              <option>
                <label>Weekly</label>
                <value>weekly</value>
              </option>
              <option>
                <label>Monthly</label>
                <value>monthly</value>
              </option>
              <option>
                <label>Yearly</label>
                <value>yearly</value>
              </option>
            </options>
            <selector-type>DROPDOWN</selector-type>
          </config>
        </input>
        <input type="TextLine" name="updateFrequency">
          <label>SY Update frequency</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="ContentSelector" name="postsFolder">
          <label>Category</label>
          <occurrences minimum="0" maximum="0"/>
          <config>
            <relationship-type>system:reference</relationship-type>
            <allow-content-type>base:folder</allow-content-type>
          </config>
        </input>
      </items>
    </field-set>
  </form>
  <x-data mixin="menu-item"/>
</content-type>