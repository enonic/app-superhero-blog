<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Author</display-name>
  <content-display-name-script>$('name')</content-display-name-script>
  <super-type>base:structured</super-type>
  <form>
    <field-set name="basic">
      <label>Comment</label>
      <items>
        <input type="TextLine" name="name">
          <label>Name</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="TextLine" name="email">
          <label>Email</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="TextLine" name="website">
          <label>Website</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="HtmlArea" name="bio">
          <label>Bio</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
      </items>
    </field-set>
  </form>
</content-type>