<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Comment</display-name>
  <content-display-name-script>$('name')</content-display-name-script>
  <super-type>base:structured</super-type>
  <is-abstract>false</is-abstract>
  <is-final>true</is-final>
  <is-built-in>false</is-built-in>
  <allow-child-content>true</allow-child-content>
  <form>
    <field-set name="basic">
      <label>Comment</label>
      <items>
        <input type="TextLine" name="name">
          <label>Name</label>
          <immutable>false</immutable>
          <indexed>true</indexed>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="TextLine" name="email">
          <label>Email</label>
          <immutable>false</immutable>
          <indexed>true</indexed>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="TextLine" name="website">
          <label>Website</label>
          <immutable>false</immutable>
          <indexed>true</indexed>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="HtmlArea" name="comment">
          <label>Comment</label>
          <immutable>false</immutable>
          <indexed>true</indexed>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="ContentSelector" name="article">
          <label>Article</label>
          <immutable>false</immutable>
          <indexed>false</indexed>
          <occurrences minimum="1" maximum="1"/>
          <config>
            <relationship-type>system:reference</relationship-type>
            <allow-content-type>com.enonic.theme.superhero:post</allow-content-type>
          </config>
        </input>
      </items>
    </field-set>
  </form>
</content-type>